header
  style.
    .desktop-navBar, .nav-items, .mobile-navBar{
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .nav-items div{
      margin: 0 .75rem;
    }

    .mobile-nav {
      z-index: 999;
    }

    .menu-btn {
      display: block;
      padding: 10px;
      cursor: pointer;
      width: fit-content;
    }

    .menu-icon{
      position: relative;
      z-index: 50;
      width: fit-content;
    }

    .nav-links {
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      background-color: #222;
      transition: left 0.3s ease;
    }

    .mobile-nav-container, .mobile-navBar {
      dispay: none ;
    }

    @media (min-width: 732px){

      .nav-links {
        position: absolute;
        top: 0;
        left: -100%;
        width: 20%;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        background-color: #222;
        transition: left 0.3s ease;
      }
    }

    @media (max-width: 820px){
      .mobile-navBar {
        display: flex;
      }

      .desktop-navBar{
        display: none; 
      } 
    }

    @media (min-width: 821px) and (max-width: 2560px){
      .mobile-navBar {
        display: none;
      }

      .desktop-navBar{
        display: flex; 
      } 
    }

    .menu-icon i{
      width: fit-content;
    }
    .nav-links.show {
      left: 0;
    }

    .nav-links div a , 
    .nav-links div h5{
      display: block;
      padding: 15px 20px;
      color: #fff;
      text-decoration: none;
      width: fit-content;
      cursor: pointer;
    }




