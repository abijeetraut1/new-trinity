extends account_base

block content
    .content.col.g-5
        h3(style="font-weight: 600; color: #FF3F6C;") Purchase

        //- .alert.alert-danger.alert-dismissible(role="alert")
        //-     button.close(type="button" data-dismiss="alert" aria-label="Close")
        //-         span(aria-hidden="true") &times;
        //-     strong Warning!
        //-     |  Better check yourself, you're not looking too good.

        // row for ecommerece
        .row
            each product in products
                .col-md-2
                    .card.mb-4
                        img.card-img-top(src=`../../images/product/upload/tshirt/front/${product.front}` alt="Product 1")
                        .card-body
                            h5.card-title= product.name
                            p.card-text= product.email
                            p.card-text= product.number
                            .d-flex.justify-content-between.align-items-center
                                .btn-group
                                    a(href=`/delivered/${product.id}`)
                                        button.btn.btn-sm.btn-outline-secondary.px-3(type="button" style="background: #FF3F6C; color:white;") View
                                small.text-muted $19.99
