    script.
        function copyToClipboard() {
            // Select the text field
            var textToCopy = document.getElementById("referalcode");
            var alertshow = document.getElementById("alertshow");
            console.log(alertshow)
            
            // Select the text in the text field
            textToCopy.select();
            textToCopy.setSelectionRange(0, 99999); // For mobile devices
            // Copy the selected text
            document.execCommand("copy");
            alertshow.classList.remove("hide-alert");
            alertshow.classList.add("show-alert");
            
            setTimeout(() => {
                alertshow.classList.add("hide-alert");
                alertshow.classList.remove("show-alert");
            }, 2000);
        }           