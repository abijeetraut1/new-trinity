extends account_base

block content
    .content.col.g-5
        <div id="alertshow" class="hide-alert alert-ctrl alert alert-warning alert-dismissible fade show position-absolute right-2" role="alert">
            <strong>copied</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        h4 Total Earnings
        p You can request payout when your payment threshold is reached.
        <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">0%</div>
        </div>
        
        <div class="mt-3"> 
            <p class="btn btn-primary" data-bs-toggle="collapse" href="#collapse-form" role="button" style="background-color: #ff3f6c; color: white;" aria-expanded="false" aria-controls="collapseExample">
                | withdrawl
            </p>
            <div class="collapse" id="collapse-form">
                <form class="col g-3">
                    <div class="row-md-6 mt-3">
                        <label for="inputPassword4" class="form-label">Wallet Type</label>
                        <input type="text" class="form-control" id="wallet-type" value="khalti" readonly>
                    </div>
                    <div class="row-md-6 mt-3">
                        <label for="inputPassword4" class="form-label">Wallet Number</label>
                        <input type="password" class="form-control" id="wallet-number">
                        <label for="inputPassword4" class="form-label">withdrawl will be proceed within 24 hours</label>
                    </div>
                    
                    <div class="col-12 mt-3">
                        <button type="submit" class="btn" style="background-color: #ff3f6c; color: white;">Submit</button>
                    </div>
                </form>
            </div>
        </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>