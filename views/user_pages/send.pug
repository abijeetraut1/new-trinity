extends base

block content
  style.
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
    }
    .container {
      max-width: 800px;
      margin: 50px auto;
      padding: 20px;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
    }
    .order-progress {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-direction: row;
    }
    .stage-text {
      font-size: 14px;
      margin-top: 8px;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .circle {
      width: 30px;
      height: 30px;
      border-radius: 50%;
      background-color: #ccc;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 12px;
      color: #fff;
    }
    .circle.done {
      background-color: #4caf50;
    }
    .circle.active {
      background-color: #2196f3;
    }
    .line {
      height: 2px;
      background-color: #ccc;
      flex: 1;
    }
    .line.active {
      background-color: #2196f3;
    }

    .container div{
      margin-bottom: 10px;
    }

    button{
      width: 100%;
      padding: .5rem 0;
      background: #D73254;
      border:none;
      color: white;
    }
    @media (min-width: 0px) and (max-width: 360px) {
      .stage {
        margin: 1rem 0 20px 0; 
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-direction: column;
        margin-bottom: 20px;
      }

      .order-progress { 
        margin: 1rem 0 20px 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-direction: column;
        margin-bottom: 20px;
      }

      .back-to-home{
        margin: 1rem 0;
      }


      .container{
        margin: 1rem;
      }

      h1{
        font-size: 25px;
        text-align:center;
      }

      button{
        width: 100%;
        padding: .5rem 0;
        background: #D73254;
        border:none;
        color: white;
      }

      .container div{
        margin-bottom: 0;
      }
    }
    .back-to-home-link{
      text-decoration: none;
      color: white;
    }
    
  .container
    div 
      h1 Order Tracking
    .order-progress
      .stage
        .circle.done 1
        .stage-text Order Received
      .stage
        .circle 2
        .stage-text Processing
      .stage
        .circle 3
        .stage-text Shipped
    .back-to-home
      button 
        a.back-to-home-link(href="/") Home
