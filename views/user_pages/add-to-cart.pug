doctype html
head
    meta(charset='utf-8')
    title Dashboard
    meta(content='width=device-width, initial-scale=1.0' name='viewport')
    meta(content='' name='keywords')
    meta(content='' name='description')
    // Favicon
    //- link(href='img/favicon.ico' rel='icon')
    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap' rel='stylesheet')

    // Icon Font Stylesheet
    link(href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css' rel='stylesheet')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css' rel='stylesheet')

    // Customized Bootstrap Stylesheet
    //- favicon
    link(rel="shortcut icon" href="../images/logo.png" type="image/x-icon")

    link(href='../css/bootstrap.min.css' rel='stylesheet')
    link(href='../css/style.css' rel='stylesheet')

    include _header
    script(src="./js/jquery-latest.js")
    script(src="./js/forall.js")

    .content(style="width: calc(100%); margin-left: 0px;")
        if(renderingItem.length === 0)
            .center-svg(style="height:100vh; display:flex; flex-direction: column; justify-content: center; align-items:center;") 
                img(src="./svg/no-cart.svg" alt="" srcset="" style="height:25vh")
                h3(style="color: #afadad; margin-top: 2rem;") You Haven't added anything in cart
        else 
            each item in renderingItem
                .container-fluid.pt-4.px-4
                    .row.pt-4.class-align-items.d-flex
                        .container-of-name-and-image.d-flex.align-items-center.justify-content-space-between
                            .image-of-container(style='height: 15vh; padding: 1rem 1rem;')
                                img(src=`/images/product/upload/tshirt/front/${item.front}.png` alt='' style='height: 100%;')
                            .image-of-container
                                h5=  item.title
                        .container-of-name-and-text.d-flex.justify-content-space-around
                            .image-of-container.d-flex.justify-content-center.align-items-center(style='height: 15vh; padding: 1rem 1rem;')
                                h5.no-of-order= item.price
                        .container-of-name-and-text.d-flex.justify-content-space-around
                            a(href=`/product/${item.slug}` target="_blank") 
                                .image-of-container.d-flex.justify-content-center.align-items-center(style='height: 15vh; padding: 1rem 1rem;')
                                    button#removeBtn.send-of-order() view Item
                            a(href=`/product/${item.slug}/order` target="_blank") 
                                .image-of-container.d-flex.justify-content-center.align-items-center(style='height: 15vh; padding: 1rem 1rem;')
                                    button#removeBtn.send-of-order() Buy Item
                            .image-of-container.d-flex.justify-content-center.align-items-center(style='height: 15vh; padding: 1rem 1rem;')
                                button#removeBtn.send-of-order(onclick="deletefunc()") Remove
                                span#dbID( style="display:none;")= item.deleteID

    script(src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.3/axios.min.js") 
    script(src='https://code.jquery.com/jquery-3.4.1.min.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js')
    script(src='../js/main.js')