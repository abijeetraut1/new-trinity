extends base

block content
    .form-bg.form-color-primary(style="flex-direction: column")
        #forgetPassword.form-card
            h2.form-heading Forget Password
            .form-body
                form
                    .css-form-control
                        .form-control-icon
                            i.fa-solid.fa-envelope
                        input.form-input-text.login-email(type='email' id='email' name='email' placeholder='Email')
                    
                    .css-form-control
                        div.btn-form-submit.btn-success send verification code
        
        #verifyCode.form-card
            h2.form-heading Verify Code
            .form-body
                form
                    .css-form-control
                        .form-control-icon
                            i.fa-solid.fa-envelope
                        input.form-input-text.verification-email(type='number' id='verification-number' name='number' placeholder='156163')
                    
                    .css-form-control
                        div.btn-form-submit.btn-success verify

        #changePassword.form-card
            h2.form-heading Change Password
            .form-body
                form
                    .css-form-control
                        .form-control-icon
                            i.fa-solid.fa-lock
                        input.form-input-text.login-password(type='password' id='password-login' name='password' placeholder='New Password')
                        
                    .css-form-control
                        .form-control-icon
                            i.fa-solid.fa-lock
                        input.form-input-text.login-password(type='password' id='password-confirm' name='password' placeholder='Re-type New Password')
                        
                    .incorrect-password( style="color: red; display: none; padding-left: 1.2rem;")
                        p incorrect password
                    .css-form-control
                        .form-control-icon
                            i.fa-solid.fa-lock
                        input.form-input-text.login-password(type='password' id='password-confirm' name='password' placeholder='Confirm Password')
                    
                    .css-form-control
                        div.btn-form-submit.btn-success Change

    script(src="../js/ForgetPassword.js") 