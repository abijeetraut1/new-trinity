extends base

block content
    script(src="./js/jquery-latest.js")
    script(src="./js/forall.js")
    br
    br
    section.made-by-creators
        br
        br
        .made-by-creator-container
            each search in searchDesign
                .made-by-creators-div
                    .product-image
                        img(src=`./../images/product/upload/tshirt/front/${search.front}.png` alt='')
                    hr.hr
                    .product-information
                        br
                        p= search.title
                        br
                        br
                        .product-price-and-buy(style="display: flex; align-items: baseline;")
                            //- - let price = &#x930;&#x941;&lrm
                            p.price= search.price
                            a(href=`../product/${search.slug}`)
                                button.buy-button BUY
                        br

    script(src='./js/index.js')
